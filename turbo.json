{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "DATABASE_URL",
    "NEXTAUTH_JWT_SECRET",
    "JUDGE0_URL",
    "JUDGE0_SECRET", 
    "JUDGE0_CALLBACK_URL",
    "MOUNT_PATH",
    "PORT"
  ],
  "globalEnv": [
    "DATABASE_URL",
    "NEXTAUTH_JWT_SECRET",
    "JUDGE0_URL",
    "JUDGE0_SECRET", 
    "JUDGE0_CALLBACK_URL",
    "MOUNT_PATH",
    "PORT"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "DATABASE_URL",
        "NEXTAUTH_JWT_SECRET",
        "JUDGE0_URL",
        "JUDGE0_SECRET", 
        "JUDGE0_CALLBACK_URL",
        "MOUNT_PATH",
        "PORT"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "DATABASE_URL",
        "NEXTAUTH_JWT_SECRET",
        "JUDGE0_URL",
        "JUDGE0_SECRET", 
        "JUDGE0_CALLBACK_URL",
        "MOUNT_PATH",
        "PORT"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": [
        "DATABASE_URL",
        "NEXTAUTH_JWT_SECRET",
        "JUDGE0_URL",
        "JUDGE0_SECRET", 
        "JUDGE0_CALLBACK_URL",
        "MOUNT_PATH",
        "PORT"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL",
        "NEXTAUTH_JWT_SECRET",
        "JUDGE0_URL",
        "JUDGE0_SECRET", 
        "JUDGE0_CALLBACK_URL",
        "MOUNT_PATH",
        "PORT"
      ]
    }
  }
}
